<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FrontProduct">
    <!-- 显示产品列表 -->
	<resultMap type="com.aichi.bean.Product" id="ProductResult">
		<id column="PRODUCT_ID" jdbcType="INTEGER" property="productId" />
		<result column="PRODUCT_NAME" jdbcType="VARCHAR" property="productName"/>
		<result column="DESCRIPTION" jdbcType="VARCHAR" property="desciption"/>
		<result column="PRICE" jdbcType="INTEGER" property="price"/>
		<result column="NUM" jdbcType="INTEGER" property="num"/>
		<result column="PHOTO" jdbcType="VARCHAR" property="photo"/>
		
	</resultMap>
	<select id="queryProductList" parameterType="com.aichi.bean.Product" resultMap="ProductResult">
		SELECT PRODUCT_ID,PRODUCT_NAME,DESCRIPTION,PRICE,NUM,PHOTO FROM product
	</select> 
	
	 <!-- 添加产品-->
	 <insert id="insertProduct" parameterType="com.aichi.bean.Product">
	 	INSERT INTO product (PRODUCT_NAME,DESCRIPTION,PRICE,NUM) VALUES(#{productName},#{desciption},#{price},#{num})
	 </insert>
	
	<!-- 编辑产品 -->
	<update id="updateProduct" parameterType="com.aichi.bean.Product">
		UPDATE product SET PRODUCT_NAME = #{productName},DESCRIPTION = #{desciption},PRICE = #{price},NUM = #{num} WHERE PRODUCT_ID = #{productId} 
	</update>
	
	<!-- 删除产品 -->
	<delete id="deleteProduct" parameterType="int">
		Delete From product where PRODUCT_ID = #{_parameter}
	</delete>
	
	<!-- 根据产品ID进入该产品购买页面,返回该产品数据 -->
	<resultMap type="com.aichi.bean.Product" id="ProductListByIdResult">
		<id column="PRODUCT_ID" jdbcType="INTEGER" property="productId" />
		<result column="PRODUCT_NAME" jdbcType="VARCHAR" property="productName"/>
		<result column="DESCRIPTION" jdbcType="VARCHAR" property="desciption"/>
		<result column="PRICE" jdbcType="INTEGER" property="price"/>
		<result column="NUM" jdbcType="INTEGER" property="num"/>
		<result column="PHOTO" jdbcType="VARCHAR" property="photo"/>
		
	</resultMap>
	<select id="queryProductListById" parameterType="int" resultMap="ProductListByIdResult">
		SELECT PRODUCT_ID,PRODUCT_NAME,DESCRIPTION,PRICE,NUM,PHOTO FROM product where PRODUCT_ID = #{_parameter}
	</select>
</mapper>